<h1>Create Comment</h1>

<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field :commenter, class: "form-control" %>
  </p>
  <p>
    <%= form.rich_text_area :body, class: "form-control" %>
  </p>
  <p>
    <%= form.label "source" %>
    <%= form.text_area :curl, class: "form-control" %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>